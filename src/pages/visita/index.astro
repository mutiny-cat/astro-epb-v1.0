</Layout>

<style>
  .global {
    margin-bottom: 1rem;
  }

  .lines {
    display: flex;
    justify-content: flex-start;
    width: 100%;
    margin: 0 auto;
    gap: .5rem;

    @media (width < 768px) {
      justify-content: center;
    }

    span {
      font-size: 12px;
      font-weight: 700;
    }
  }

  .stop {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: .5rem;

    @media (width < 768px) {
      justify-content: center;
    }

    p {
      display: flex;
      align-items: center;
      font-size: 14px;
    }

    strong {
      line-height: 0;

      &:before {
        content: "-";
        margin-right: .25rem;
      }
    }

    em {
      &:before {
        content: "-";
        margin: .25rem;
      }
    }
  }

  .stop-metro {
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    margin-left: 3rem;

    @media (width < 768px) {
      align-items: center;
      margin-left: 0;
    }
  }

  .stop-bus {
    margin-left: 3rem;

    @media (width < 768px) {
      margin-left: 0;
    }
  }

  .card-transport {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 0;
    margin: 0;

    header {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem 0;
    }

    footer {

    }

    ul {
      list-style-type: none;
      padding-left: 0;
    }

    li div h4 {
      margin: 0 auto;
    }
  }

  section {
    max-width: 960px;
    width: 90%;
    margin: 0 auto;
    padding-top: var(--header-height);

    &:last-child {
      padding-bottom: var(--header-height);
    }
  }

  h2 {
    text-align: center;
    margin-bottom: var(--footer-height);
  }

  .adaptat {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    h2 {
      font-size: 2.5rem;
    }

    p {
      font-size: 5rem;
      line-height: 0;
    }
  }

  .horaris {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .card-horari {
    padding: 1.5rem 0;
    width: auto;

    @media (width < 640px) {
      width: 100%;
    }

    h3 {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1.1rem;
      text-align: center;

      &:before {
        content: "\42";
        font-family: var(--font-icon);
        font-size: 2rem;
        margin-right: .5rem;
        line-height: 0;
      }
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 1rem 0 0 2rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    li {
      display: flex;
      align-items: center;
      margin-bottom: .5rem;
      font-weight: 700;

      &:last-child {
        padding-bottom: 0;
      }

      &:before {
        content: "\44";
        font-family: var(--font-icon);
        font-size: 1.5rem;
        margin-right: .5rem;
        line-height: 0;
      }
    }
  }

  .arribar {
    img {
      display: block;
      border-radius: 8px;
      box-shadow: var(--box-shadow);
      max-width: 960px;
      width: 100%;
      transition: box-shadow .3s ease-in-out;

      &:hover {
        box-shadow: var(--box-shadow2);
        transition: box-shadow .3s ease-in-out;
      }
    }

    div {
      display: flex;
      justify-content: space-between;
      margin-top: 1.5rem;
      font-size: .8rem;
      font-weight: 700;

      @media (width < 640px) {
        flex-direction: column;
      }

      p {
        display: flex;
        justify-content: center;
        align-items: center;
        line-height: 0;
        margin-bottom: 0;

        @media (width < 640px) {
          margin-bottom: .5rem;
        }
      }

      span {
        margin-right: .3rem;
      }
    }
  }

  .transport {
    margin-top: 4rem;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;

    @media (width < 768px) {
      grid-template-columns: 1fr;
    }
  }

  .svg {
    height: 48px;
  }

  .icon {
    margin-right: .3rem;
    line-height: 0;
    font-size: 18px;
  }

  .square, .circle {
    width: 32px;
    height: 32px;
    padding: .2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
  }

  .circle {
    border-radius: 50%;
  }

  .red {
    background-color: var(--bus-color-red);
  }

  .blue {
    background-color: var(--bus-color-blue);
  }

  .purple {
    background-color: var(--bus-color-purple);
  }

  .green {
    background-color: var(--bus-color-green);
  }

  .l2 {
    background-color: var(--metro-color-l2);
  }

  .l1 {
    background-color: var(--metro-color-l1);
  }
</style>