      <article class="card-horari">
        <h3>Dimecres:</h3>
        <ul>
          <li>10 h a 13 h</li>
        </ul>
      </article>
      <article class="card-horari">
        <h3>Dijous:</h3>
        <ul>
          <li>17 h a 20 h</li>
        </ul>
      </article>
