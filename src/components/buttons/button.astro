---
const { typeButton, url, textButton, iconName } = Astro.props
---

<a class={typeButton} href={url} title={textButton}>
  <span>{textButton}</span>
  <span class={iconName}></span>
</a>

<style lang="scss">
  a {
    min-width: 175px;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1;
    padding: .8rem 1.2rem .7rem 1.6rem;
    border-radius: var(--border-radius);
    font-family: var(--font-default);
    font-weight: 700;
    text-transform: uppercase;
    font-size: 1rem;
    text-decoration: none;

    background-color: var(--bg-dark);
    border: 1px solid var(--bg-dark);
    color: var(--fg-white);
    transition: var(--transition-button);

    &:hover {
      background-color: var(--fg-primaryAlt);
      border: 1px solid var(--fg-primaryAlt);
    }

    & :last-child {
      font-size: 1.2rem;
      padding-left: .5rem;
      height: 100%;
    }

    &.dark {
      background-color: var(--bg-darker);
      border: 1px solid var(--bg-darker);
      color: var(--fg-white);
      transition: var(--transition-button);

      &:hover {
        background-color: var(--fg-primaryAlt);
        border: 1px solid var(--fg-primaryAlt);
      }
    }

    &.light {
      background-color: var(--bg-white);
      border: 1px solid var(--bg-white);
      color: var(--fg-primary);
      transition: var(--transition-button);

      &:hover {
        background-color: var(--bg-white);
        border: 1px solid var(--fg-primaryAlt);
        color: var(--fg-primaryAlt);
      }
    }

    &.ghost {
      background-color: rgba(255, 255, 255, .1);
      border: 1px solid var(--fg-primary);
      color: var(--fg-primary);
      transition: var(--transition-button);

      &:hover {
        background-color: rgba(255, 255, 255, .3);
        border: 1px solid var(--fg-primaryAlt);
        color: var(--fg-primaryAlt);
      }
    }

    &.punta-barcelona {
      background-color: rgba(255, 255, 255, .1);
      border: 1px solid rgba(255, 255, 255, 0.1);
      color: var(--fg-white);
      transition: var(--transition-button);

      &:hover {
        background-color: rgba(255, 255, 255, .4);
        /*border: 1px solid rgba(255, 255, 255, .4);*/
        border: 1px solid var(--fg-primaryAlt);
        color: var(--fg-white);
      }
    }
    }
</style>